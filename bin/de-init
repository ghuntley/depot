set -Eeuo pipefail

# 1. Bootstrap third_party git submodules
echo "[dev-env] Syncronizing git submodules"
git submodule sync
git submodule update

# 2. Install git-hooks
bash "$REPO_ROOT/bin/de-install-git-hooks"

# n. Notify
echo "[dev-env] Done"
echo